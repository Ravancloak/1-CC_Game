script, mainloop, begin
	while (true) do (
		specwait
	)
end

script, specwait, time=1, begin
	variable (i)
	for (i,1,time) do (

		if (lookupslice(sli:battleback)) then (battleAnimate)

		mapUpdate()
		game:tick += 1
		wait()
	)
end

